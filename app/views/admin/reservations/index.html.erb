<p style="color: green"><%= notice %></p>
<div class="level p-4 m-4">
  <h1 class="level-item has-text-centered is-size-2">Reservations</h1>
</div>
<div class="columns m-4">
  <div class="column is-one-quarter m-4">
    <div class="box">
      <%= form_with url: admin_reservations_path, method: :get do |form| %>
        <div class="field">
          <%= form.label :user, class: "label" %>
          <%= form.text_field :user, value: @filter_user , class: "input" %>
        </div>
        <div class="field center-child">
          <%= form.submit value: "Filter", class: "button is-warning" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="column box m-4">
    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th>User</th>
          <th>Seat</th>
          <th>Flight</th>
          <th>Actions</th>
        </tr>
      </thead>
      <% @reservations.each do |reservation| %>
        <%= render reservation %>
      <% end %>
    </table>
  </div>
</div>
